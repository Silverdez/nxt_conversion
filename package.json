{
  "name": "sage",
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "bud dev",
    "build": "bud build --clean",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --include=\"app,resources\"",
    "translate:update": "for filename in ./resources/lang/*.po; do msgmerge -U $filename ./resources/lang/sage.pot; done; rm -f ./resources/lang/*.po~",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang"
  },
  "devDependencies": {
    "@roots/bud": "^5.8.7",
    "@roots/bud-babel": "^5.8.7",
    "@roots/bud-postcss": "^6.6.10",
    "@roots/bud-sass": "^5.8.7",
    "@roots/bud-tailwindcss": "^5.8.7",
    "@roots/sage": "^5.8.7",
    "@wordpress/babel-preset-default": "^6.9.0",
    "@wordpress/browserslist-config": "^4.1.2",
    "@wordpress/dependency-extraction-webpack-plugin": "^3.4.1",
    "babel-eslint": "^10.1.0",
    "browser-sync": "^2.27.9",
    "browser-sync-webpack-plugin": "^2.3.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.13",
    "sass": "^1.51.0",
    "sass-loader": "^13.0.0"
  },
  "dependencies": {
    "@barba/core": "^2.9.7",
    "@barba/prefetch": "^2.1.10",
    "@barba/router": "^2.1.10",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "gsap": "^3.10.4",
    "jquery": "^3.6.0"
  }
}
